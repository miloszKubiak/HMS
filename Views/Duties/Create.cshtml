@model HMS.Models.Duty

@{
    ViewData["Title"] = "Create";
    var employeeList = ViewData["EmployeeList"] as List<SelectListItem>;
}

<h1>Create</h1>

<h4>Duty</h4>

<div class="row">
    <div class="col-12">
        @if (ViewData["CreateError"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <p>@ViewData["CreateError"]</p>
            </div>
        }

    </div>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" class="form-control" asp-items="@(new SelectList(employeeList, "Value", "Text"))"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DutyDate" class="control-label"></label>
                <input asp-for="DutyDate" class="form-control" />
                <span asp-validation-for="DutyDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
